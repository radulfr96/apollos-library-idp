@model PasswordResetRequestViewModel
<div>
    <div class="lead">
        <div class="row">
            <div class="col-3"></div>
            <div class="col-9">
                <h1>Request password reset</h1>
            </div>
        </div>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <form asp-route="RequestPassword">
                        <fieldset>
                            <p>Enter your email address to receive a link to reset your password.</p>
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input class="form-control" placeholder="Email"
                                       asp-for="Email" autofocus>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary">Send request</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

